@model Login.Models.UserDetail

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title>Login</title>


    <link href="~/Logincss/style.css" rel="stylesheet" />
</head>
<body>
    <div class="box">

        @Html.BeginForm("Autherize", "Login", FormMethod.Post)
        {
        
        
         



        <h1>Login</h1>

        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @type = "text", @value = "UserName", @placeholder = "UserName" } })
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @value = "Password", @placeholder = "Password" } })

        <input type="submit" name="" value="Login">
        <a href="@Url.Action("Register","Login")">Register Here</a>
        }

        
    </div>

</body>
</html>
